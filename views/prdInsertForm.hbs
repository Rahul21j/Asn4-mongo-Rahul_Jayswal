<h1>{{title}}</h1>
<form action="/api/products" method="post">
        <label for="productId">Product ID:</label>
        <input type="text" id="productId" name="asin" required>
        <br>
        <br>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
        <br>
        <br>
        <label for="imageUrl">Image URL:</label>
        <input type="text" id="imageUrl" name="imageUrl" required>
        <br>
        <br>
        <label for="stars">Stars:</label>
        <input type="number" id="stars" name="stars" required>
        <br>
        <br>
        <label for="reviews">Reviews:</label>
        <input type="number" id="reviews" name="reviews" required>
        <br>
        <br>
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required>
        <br>
        <br>
        <label for="listPrice">List Price:</label>
        <input type="number" id="listPrice" name="listPrice" required>
        <br>
        <br>
        <label for="categoryName">Category Name:</label>
        <input type="text" id="categoryName" name="categoryName" required>
        <br>
        <br>
        <label for="isBestSeller">Is Best Seller?</label>
        <select id="isBestSeller" name="isBestSeller" required>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br>
        <br>
        <label for="boughtInLastMonth">Bought in Last Month?</label>
        <select id="boughtInLastMonth" name="boughtInLastMonth" required>
            <option value="1">1</option>
            <option value="0">0</option>
        </select>
        <br>
        <br>
        <button type="submit">Insert</button>
</form>